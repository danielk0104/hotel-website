{% extends "partials/base1.jinja" %}
{% block title %}Search Results - Hotel Booking App{% endblock %}
{% block content %}

    <!-- Include searchbar -->
    <div class="container mt-3">
        {% include 'partials/searchbar.jinja' %}
    </div>

    <!-- Filter/sort -->
    <div class="container my-3">
        <div class="row">
            <div class="col text-left">
                <a>
                    <img src="/img/filter.svg" width="20" height="20" alt="Filter icon">
                    Filter
                </a>
            </div>
            <div class="col text-right">
                <a>
                    Sort
                    <img src="/img/sort.svg" width="20" height="20" alt="Sort icon">
                </a>
            </div>
        </div>
    </div>
    
    <!-- List all available locations -->
    {% for location in locations %}
    <div class="container mt-3">
        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col">
                    <div class="row">
                        <div class="col">
                            <img class="rounded" src={{location.image1}} width="179" alt="Hotel room preview">
                        </div>
                        <div class="w-100"></div>
                        <div class="col mt-1">
                            <img class="rounded" src={{location.image2}} width="87" alt="Hotel room preview">
                            <img class="rounded" src={{location.image3}} width="87" alt="Hotel room preview">
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card-body">
                        <h5>{{location.name}}</h5>
                        <p>{{location.loc}}</p>
                        <p>{{location.price}}</p>
                        <a href="hotelpage.html">More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

    <!-- End of results -->
    <div class="container text-center my-3">
        <p><small class="text-muted">End of results</small></p>
    </div>

{% endblock %}