<!-- Carousel Template -->
{% macro carousel1(image1, image2, image3)%}
<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselIndicators" data-slide-to="1"></li>
        <li data-target="#carouselIndicators" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src={{image1}} class="d-block w-100 rounded" alt="First slide">
        </div>

        <div class="carousel-item">
            <img src={{image2}} class="d-block w-100 rounded" alt="Second slide">
        </div>

        <div class="carousel-item">
            <img src={{image3}} class="d-block w-100 rounded" alt="Third slide">
        </div>
    </div>

    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>

    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
{% endmacro %}

<!-- Card Template -->
{% macro card1(name, address, checkin, checkout, nonights, nopeople, bboi, cost) %}
<div class="card mt-3">
    <div class="card-header">
        <h5>{{name}}</h5>
        <p>{{address}}</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <p>Check In: {{checkin}}</p>
            <p>Check Out: {{checkout}}</p>
            <p>No. of Nights: {{nonights}}</p>
        </li>
        <li class="list-group-item">
            <p>No. of People: {{nopeople}}</p>
        </li>
        <li class="list-group-item text-center">
            <p>{{bboi}}</p>
        </li>
        <li class="list-group-item text-center">
            <p>Total cost:</p>
            <p>{{cost}}</p>
        </li>
    </ul>
</div>
{% endmacro %}

