<!-- Image Template 1 -->
{% macro image1(heading, body, image, link, dest) %}
<div class="row">
    <div class="col">
        <img class="img-fluid rounded" src={{image}} alt="Hotel room">
    </div>
    <div class="col text-center">
        <h5 class="title">{{heading}}</h5>
        <p class="text">{{body}}</p>
        <a href={{dest}}>{{link}}</a>
    </div>
</div>
{% endmacro %}

