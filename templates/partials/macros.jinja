<!-- Popup -->
{% macro popup(ident, body, btprimary, btsecondary, link) %}
<div class="modal fade" id={{ident}} tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>{{body}}</p>
            </div>
            <div class="modal-footer">
                <a class="btn btn-primary" href={{link}} role="button">{{btprimary}}</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{btsecondary}}</button>
            </div>
        </div>
    </div>
</div>
{% endmacro %}